{
    "manifest_version": 3,
    "name": "Open Base64 Link",
    "description": "Easy to redirect base64 link",
    "version": "1.0",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "service_worker": 
            "service-worker.js"
        
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus", "tabs", "clipboardWrite"
    ]
}